<%= form_for @article, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :heading, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :heading, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :auther, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :auther, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :article, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :article, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :avatar_file_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :avatar %>
    </div>
    <%#= error_span(@article[:avatar_file_name]) %>
  </div>

 

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                articles_path, :class => 'btn' %>
  </div>
<% end %>
