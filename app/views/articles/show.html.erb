
<%- model_class = Article -%>


<div class="page-header">
  <h1><%= @article.heading %></h1>
</div>

 <div class ="row-fluid">
<%= image_tag @article.avatar.url, :style => "width: 300px; height: 300px;", :ALIGN =>"Left" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @article.article %><br/><br/>


<% if current_user %>
<%= link_to "Back",welcome_dashboard_path, :class => "btn"%>
<% else %>
  <%= link_to "Back",articles_path, :class => "btn" %>
<% end %>
  <%#= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_article_path(@article), :class => 'btn' %>
  <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
              article_path(@article),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

  
</div>
<h2>Comments</h2>
 <div id="comments">
         <%= render :partial => @article.comments %>
 </div>

 <%= form_for [@article, Comment.new] do |f| %>
        <p>
                <%= f.label :body, "New comment" %><br/>
                <%= f.text_area :body %>
        </p>
        <p><%= f.submit "Add comment" %></p>
<% end %>